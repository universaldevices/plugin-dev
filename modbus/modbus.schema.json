{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "modbus": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["TCP", "RTU"]
          },
          "ip": {
            "type": "string",
            "format": "ipv4"
          },
          "port": {
            "type": "integer",
            "minimum": 1,
            "maximum": 65535
          },
          "devices": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "minimum": 1
                },
                "name": {
                  "type": "string"
                },
                "pollingInterval": {
                  "type": "integer",
                  "minimum": 1
                },
                "registers": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "address": {
                        "type": "integer",
                        "minimum": 0
                      },
                      "type": {
                        "type": "string",
                        "enum": ["input", "output", "input+output", "holding"]
                      },
                      "dataType": {
                        "type": "string",
                        "enum": ["sint16", "uint16", "sint32", "int32", "str", "float32" ]
                      },
                      "name": {
                        "type": "string"
                      }
                    },
                    "required": ["address", "type", "dataType", "name"]
                  }
                }
              },
              "required": ["id", "name", "pollingInterval", "registers"]
            }
          }
        },
        "required": ["type", "devices"],
        "additionalProperties": false
      }
    },
    "required": ["modbus"]
  }