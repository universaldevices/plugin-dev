{
    "plugin": {
          "name":"oadr3",
          "description":"OpenADR 3.1 VEN Plugin for IoX",
          "publisher":"UD",
          "language": "python3",
          "executableName":"oadr3.py",
          "installScript":"install.sh",
          "documentationLink":"docs",
          "licenseLink":"lic",
          "shortPoll":60,
          "longPoll":600,
          "profileVersion":"3.0.0",
          "initialLogLevel":"DEBUG",
          "enableOAUTH2":false,
          "worksOnPolisy":true,
          "worksOnEisy":true,
          "requiresIoXAccess": true,
          "enableFileUpload": false,
          "nodesAreStatic": true,
          "requirements": ["oadr30_ven_ud","tzlocal", "isodate", "pytz"],
          "version": "1.0.5"
    },
    "editors": [
        {
            "id": "ghg",
            "min": 0,
            "max": 1,
            "uom": "Raw 2-Byte unsigned value | 108",
            "precision": 4,
            "step": 0.01 
        },
        {
            "id": "price",
            "min": -10,
            "max": 10,
            "uom": "Dollar | 103",
            "precision": 4,
            "step": 0.001
        },
        {
            "id": "cool_setpoint_f",
            "min": 30,
            "max": 120,
            "uom": "Fahrenheit | 17",
            "precision": 1,
            "step": 0.5
        },
        {
            "id": "heat_setpoint_f",
            "min": 30,
            "max": 120,
            "uom": "Fahrenheit | 17",
            "precision": 1,
            "step": 0.5
        },
        {
            "id": "comfort_level",
            "min": 0,
            "max": 2,
            "uom": "Index | 25",
            "index_names": [
                "Max Comfort (Least Savings) | 0",
                "Balanced Comfort/Savings | 1",
                "Max Savings (Least Comfort) | 2"
            ]
        },
        {
            "id": "current_grid_status",
            "min": 0,
            "max": 3,
            "uom": "Index | 25",
            "index_names": [
                "Normal | 0",
                "Moderate | 1",
                "High | 2",
                "Special Emergency | 3"
            ]
        }, 
        {
            "id": "on_level",
            "min": 0,
            "max": 100,
            "uom": "Percent | 51",
            "precision": 1,
            "step": 1
        },
        {
            "id": "offset_degree",
            "uom": "Fahrenheit | 17",
            "min": 0,
            "max": 25,
            "precision": 1,
            "step": 1
        },
        {
            "id": "light_adj_offset",
            "min": 0,
            "max": 100,
            "uom": "Percent | 51",
            "precision": 1,
            "step": 1
        },
        {
            "id": "duty_cycle_offset",
            "min": 0,
            "max": 100,
            "uom": "Percent | 51",
            "precision": 1,
            "step": 1
        }
    ],
    "nodedefs": [
        {
            "id":"oadr3ven",
            "name":"OADR3VEN",
            "icon":"EnergyMonitor",
            "properties": [
                {
                    "id":"ST",
                    "name": "Price",
                    "editor": {
                        "idref": "price"
                    },
                    "is_settable": false
                },
                {
                    "id": "GHG",
                    "name": "GHG",
                    "editor": {
                        "idref": "ghg"
                    } ,
                    "is_settable": false
                },
                {
                   "id": "CL",
                   "name": "Comfort Level",
                   "editor": {
                       "idref": "comfort_level"
                   },
                   "is_settable": true 
                },
                {
                   "id": "CGS",
                   "name": "Current Grid Status",
                   "editor": {
                       "idref": "current_grid_status"
                   },
                   "is_settable": false 
                },
                {
                   "id": "CSP_F",
                   "name": "Desired Cooling Setpoint",
                   "editor": {
                       "idref": "cool_setpoint_f"
                   },
                   "is_settable": true 
                },
                {
                   "id": "HSP_F",
                   "name": "Desired Heating Setpoint",
                   "editor": {
                       "idref": "heat_setpoint_f"
                   },
                   "is_settable": true 
                },
                {
                   "id": "OL",
                   "name": "Desired Light Level",
                   "editor": {
                       "idref": "on_level"
                   },
                   "is_settable": true 
                },
                {
                   "id": "MIN_OFF_DEG",
                   "name": "Min Setpoint Offset",
                   "editor": {
                       "idref": "offset_degree"
                   },
                   "is_settable": true 
                },
                {
                   "id": "MAX_OFF_DEG",
                   "name": "Max Setpoint Offset",
                   "editor": {
                       "idref": "offset_degree"
                   },
                   "is_settable": true 
                },
                {
                   "id": "MIN_LAO",
                   "name": "Min Light Adjustment Offset",
                   "editor": {
                       "idref": "light_adj_offset"
                   },
                   "is_settable": true 
                },
                {
                   "id": "MAX_LAO",
                   "name": "Max Light Adjustment Offset",
                   "editor": {
                       "idref": "light_adj_offset"
                   },
                   "is_settable": true 
                },
                {
                   "id": "MIN_DCO",
                   "name": "Min Duty Cycle Offset",
                   "editor": {
                       "idref": "duty_cycle_offset"
                   },
                   "is_settable": true 
                },
                {
                   "id": "MAX_DCO",
                   "name": "Max Duty Cycle Offset",
                   "editor": {
                       "idref": "duty_cycle_offset"
                   },
                   "is_settable": true
                }
            ],
            "commands": {
                "accepts": [],
                "sends": []
            } 
        }
    ]
}
