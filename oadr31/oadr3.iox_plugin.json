{
    "plugin": {
          "name":"oadr31",
          "description":"OpenADR 3.1 VEN and Optimization Plugin for IoX",
          "publisher":"UD",
          "language": "python3",
          "executableName":"oadr3.py",
          "installScript":"install.sh",
          "documentationLink":"docs",
          "licenseLink":"lic",
          "shortPoll":3600,
          "longPoll":86400,
          "profileVersion":"3.0.0",
          "initialLogLevel":"DEBUG",
          "enableOAUTH2":false,
          "worksOnPolisy":true,
          "worksOnEisy":true,
          "requiresIoXAccess": true,
          "enableFileUpload": false,
          "nodesAreStatic": true,
          "requirements": ["oadr30_ven_ud>=1.0.8","tzlocal", "isodate", "pytz", "nucore-ai>=1.2.0"],
          "version": "1.0.5",
          "custom_params":{
                "VTN Base URL":"",
                "Auth Server URL":"",
                "Client ID":"",
                "Client Secret":"",
                "Duration Scale":"",
                "Event Mode":"",
                "Program ID":"",
                "Test Mode":"",
                "Disable Opt":""
          }
    },
    "editors": [
        {
            "id": "ghg",
            "min": 0,
            "max": 1,
            "uom": "Raw 2-Byte unsigned value | 108",
            "precision": 4,
            "step": 0.01 
        },
        {
            "id": "price",
            "min": -10,
            "max": 10,
            "uom": "Dollar | 103",
            "precision": 4,
            "step": 0.001
        },
        {
            "id": "comfort_level",
            "min": 0,
            "max": 1,
            "uom": "Index | 25",
            "index_names": [
                "Max Comfort (Least Savings) | 0",
                "Max Savings (Least Comfort) | 1"
            ]
        },
        {
            "id": "current_grid_status",
            "min": 0,
            "max": 3,
            "uom": "Index | 25",
            "index_names": [
                "Normal | 0",
                "Moderate | 1",
                "High | 2",
                "DR | 3"
            ]
        },
        {
            "id": "price_push",
            "min": 0,
            "max": 2,
            "uom": "Index | 25",
            "index_names": [
                "None | 0",
                "Moderate & Above | 1",
                "High | 2",
                "All | 3"
            ]
        },
        {
            "id": "dr_push",
            "min": 0,
            "max": 1,
            "uom": "Index | 25",
            "index_names": [
                "Yes | 0",
                "No | 1"
            ]
        },
        {
            "id": "device_opt_push",
            "min": 0,
            "max": 1,
            "uom": "Index | 25",
            "index_names": [
                "Yes | 0",
                "No | 1"
            ]
        }
    ],
    "nodedefs": [
        {
            "id":"oadr3ven",
            "name":"Oadr3 Energy Optimizer",
            "icon":"EnergyMonitor",
            "properties": [
                {
                    "id":"ST",
                    "name": "Price",
                    "editor": {
                        "idref": "price"
                    },
                    "is_settable": false
                },
                {
                    "id": "GHG",
                    "name": "GHG",
                    "editor": {
                        "idref": "ghg"
                    } ,
                    "is_settable": false
                },
                {
                   "id": "CL",
                   "name": "Comfort Level",
                   "editor": {
                       "idref": "comfort_level"
                   },
                   "is_settable": true 
                },
                {
                   "id": "CGS",
                   "name": "Current Grid Status",
                   "editor": {
                       "idref": "current_grid_status"
                   },
                   "is_settable": false 
                },
                {
                   "id": "PRPUSH",
                   "name": "Notify Price Changes",
                   "editor": {
                       "idref": "price_push"
                   },
                   "is_settable": true 
                },
                {
                   "id": "DRPUSH",
                   "name": "Notify DR Events",
                   "editor": {
                       "idref": "dr_push"
                   },
                   "is_settable": true 
                },
                {
                   "id": "DEVOPT",
                   "name": "Notify Device States",
                   "editor": {
                       "idref": "device_opt_push"
                   },
                   "is_settable": true 
                }
            ],
            "commands": {
                "accepts": [],
                "sends": []
            } 
        }
    ]
}
