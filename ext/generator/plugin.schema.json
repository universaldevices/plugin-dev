{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "node": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "parent": {
            "type": ["string", "null"]
          },
          "name": {
            "type": "string"
          },
          "properties": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "$ref": "./properties.schema.json"
                },
                "name": {
                  "type": "string"
                },
                "mode": {
                  "type": "string"
                },
                "uom": {
                  "$ref": "./uom.schema.json"
                },
                "range": {
                  "type": "object",
                  "properties": {
                    "min": {
                      "type": "string"
                    },
                    "max": {
                      "type": "string"
                    }
                  },
                  "required": ["min", "max"]
                }
              },
              "required": ["id", "name", "mode", "uom", "range"]
            }
          },
          "commands": {
            "type": "object",
            "properties": {
              "accepts": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "param": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "name": {
                            "type": "string"
                          },
                          "uom": {
                            "$ref": "./uom.schema.json"
                          }
                        },
                        "required": ["id", "name", "uom"]
                      }
                    }
                  },
                  "required": ["id", "name", "param"]
                }
              },
              "sends": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "param": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "name": {
                            "type": "string"
                          },
                          "uom": {
                            "$ref": "./uom.schema.json"
                          }
                        },
                        "required": ["id", "name", "uom"]
                      }
                    }
                  },
                  "required": ["id", "name", "param"]
                }
              }
            },
            "required": ["accepts", "sends"]
          }
        },
        "required": ["id", "parent", "name", "properties", "commands"]
      }
    },
    "required": ["node"]
  }
  