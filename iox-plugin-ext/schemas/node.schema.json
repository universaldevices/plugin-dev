{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "node": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The id used to identify this node"
        },
        "parent": {
          "type": "string",
          "description": "If you have a controller / child relationship, parent is the id of the controller node"
        },
        "name": {
          "type": "string",
          "description": "The human readable name. If you have NLS files, this name will be translated"
        },
        "properties": {
          "type": "array",
          "description":"Properties are the characteristics that define a node such as temp, humidity, etc.",
          "items": {
            "type": "object",
            "properties":{
            "id": {
                "$ref": "./properties.schema.json",
                "description": "This is the property's id and how you will be able to reference is in python code."
             },
            "name": {
                "type": "string",
                "description": "This is the human readable name of this property such as Cool Setpoint. If there's an NLS file, this may be translated"
             },
             "mode": {
                "enum": ["set","get","set+get"] ,
                "description": "Set becomes a command only without any status being presented. Get will only show the value for the property. Set+Get does both + synch them "
             },
             "editor": {
                "$ref": "./editor.schema.json",
                "description":"Editors help the UI with constraints ... "
             }
           },
          "required": ["id", "name", "mode", "uom"]
        },
        "commands": {
          "type": "object",
          "description": "Commands are communications between IoX and your plugin. _accepts_ are those that your plugin accepts and _sends_ are those that your plugin sends to iox such as change of state",
          "properties": {
            "accepts": {
              "type": "array",
              "description" : "Commands accepted by the plugin",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "this is what identifies the command to your plugin"
                  },
                  "name": {
                    "type": "string",
                    "description": "NLS name presented to the clients"
                  },
                  "param": {
                    "type": "array",
                    "description":"Parameters for the command",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "editor": {
                          "$ref": "./editor.schema.json"
                        }
                      },
                      "required": ["id", "name", "editor"]
                    }
                  }
                },
                "required": ["id", "name", "param"]
              }
            },
            "sends": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "param": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "editor": {
                          "$ref": "./editor.schema.json"
                        }
                      },
                      "required": ["id", "name", "editor"]
                    }
                  }
                },
                "required": ["id", "name", "param"]
              }
            }
          },
          "required": ["accepts", "sends"]
        }
      }
    },
    "required": ["id", "name", "properties", "commands"]
  }
},
  "required": ["node"]
}
 