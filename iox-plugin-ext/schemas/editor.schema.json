
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description":"Editors are what help clients and program with constraints. You can either make one or reference one.",
    "oneOf":
    [
            {
                "id": "string",
                "required": ["id"]
            },
            {
                "id":"string",
                "uom":{
                    "$ref": "./uom.schema.json",
                    "description": "Each UOM has its own unique identifier."
                },
                "min":{
                    "type":"integer",
                    "description": "Minimum value (mandatory)"
                },
                "max":{
                    "type":"integer",
                    "description": "Maximum value (mandatory)"
                },
                "precision":{
                    "type":"integer",
                    "description": "The precision for the number (optional)"
                },
                "options":{
                    "type":"array",
                    "description": "For index and percentage, these are human readable options for each index. Starts from 0 to max",
                    "items":{
                        "type":"string"
                    }
                },
                "required": ["min","max","id"]
            }
    ]
}
